<div class="container" class="position-relative">
<div class="position-absolute top-50 start-50 translate-middle">
<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

<%= link_to "Add a new task", controller: "tasks", action: "new" %>
</div>
</div>
